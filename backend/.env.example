# Server
NODE_ENV=development
PORT=3000

# CORS - Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:4200,http://localhost:5000

# JWT Authentication
# IMPORTANT: Generate a secure random secret for production
# Use: openssl rand -base64 48
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters-long-replace-this-in-production
JWT_EXPIRY=24h
