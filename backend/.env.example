# Server
NODE_ENV=development
PORT=3000

# Demo Mode (set to 'false' for production with Printify)
DEMO_MODE=true

# CORS - Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:4200,http://localhost:5000

# JWT Authentication
# IMPORTANT: Generate a secure random secret for production
# Use: openssl rand -base64 48
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters-long-replace-this-in-production
JWT_EXPIRY=24h

# Printify API (only needed if DEMO_MODE=false)
PRINTIFY_API_KEY=your_printify_api_token_here
PRINTIFY_SHOP_ID=your_shop_id_here
